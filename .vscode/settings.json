{
  "files.associations": {
    "iostream": "cpp",
    "iosfwd": "cpp",
    "ostream": "cpp"
  },
  "code-runner.runInTerminal": true,
  "cmake.cmakePath": "/opt/homebrew/bin/cmake",
  "cmake.buildDirectory": "${workspaceFolder}/cmake-build-debug",
  "cmake.allowCommentsInPresetsFile": true,
  "code-runner.executorMap": {
    "c": "cd $dir && gcc $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "cpp": "cd $dir && g++ $fileName -fuse-ld=mold -o $fileNameWithoutExt && $dir$fileNameWithoutExt " ,
  }
}